{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Open index.html in Chrome",
      "file": "${workspaceFolder}/index.html",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "runtimeArgs": [
        "--allow-insecure-localhost",
        "--disable-web-security",
        "--auto-open-devtools-for-tabs"
      ]
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "(PWA) Open index.html",
      "file": "${workspaceFolder}/index.html",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "(PWA) Serve with Live Server on 5500",
      "url": "http://localhost:5500/index.html",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ]
} 